{# edit files #}
<div class="modal fade file-modal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'Edit resource'|trans }} <small class="src-id"></small></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'Close'|trans }}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="src-media-title">{{ 'Title'|trans }}</label>
                    <input id="src-media-title" type="text" class="form-control src-title" placeholder="{{ 'Title'|trans }}" name="title">
                </div>

                <div class="form-group">
                    <button class="fa fa-download load-media"></button>
                    <button class="fa fa-trash delete-media"></button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Close'|trans }}</button>
                <button type="button" class="btn btn-primary save-media">{{ 'Save changes'|trans }}</button>
            </div>
        </div>
    </div>
</div>
