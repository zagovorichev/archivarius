<div class="modal fade chart-modal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'Chart'|trans }} <small class="src-id"></small></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'Close'|trans }}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="col-12">
                    <div class="mr-5">
                        <div class="float-left">
                            <label>
                                <input type="checkbox" class="aggregate-floatval">
                                {{ 'Unique'|trans }}
                            </label>
                        </div>
                        <h3 class="float-right">{{ 'Total' }}: <span class="total-floatvals">0</span></h3>
                    </div>
                    <canvas id="searchTagChart" width="400" height="400" data-text="{{ 'Chart by categories'|trans }}"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
